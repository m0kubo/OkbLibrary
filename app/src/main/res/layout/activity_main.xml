<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/LabelText"
            android:text="networkテスト"/>
        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:hint="(url)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="query:"/>
            <EditText
                android:id="@+id/et_key1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textUri"
                android:text="url"
                android:hint="(name)"/>
            <EditText
                android:id="@+id/et_value1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textUri"
                android:hint="(value)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="file:"/>
            <EditText
                android:id="@+id/et_key2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textUri"
                android:text="imagefile"
                android:hint="(name)"/>
            <EditText
                android:id="@+id/et_value2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textUri"
                android:text="/sdcard/FLETS_AZK/download_files/01.txt"
                android:hint="(file path)"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_request_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST"
            android:onClick="onClick"/>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response:"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </ScrollView>-->

        <TextView
            style="@style/LabelText"
            android:text="dialogテスト"/>
        <Button
            android:id="@+id/btn_dialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="1ボタン（Listenerなし）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="3ボタン（Listenerあり）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（タップ）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（単一選択）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（複数選択）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="カスタムダイアログ（NumberPicker）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_custom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="カスタムダイアログ（EditText）"
            android:onClick="onClick"/>

        <TextView
            style="@style/LabelText"
            android:text="progress dialogテスト"/>
        <Button
            android:id="@+id/btn_progress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Progress Dialog風"
            android:onClick="onClick"/>

    </LinearLayout>

</ScrollView>