<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/LabelText"
            android:text="networkテスト"/>
        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="http://www.insprout.com/"
            android:hint="(url)"/>
        <Button
            android:id="@+id/btn_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET"
            android:onClick="onClick"/>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response:"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </ScrollView>-->

        <TextView
            style="@style/LabelText"
            android:text="dialogテスト"/>
        <Button
            android:id="@+id/btn_dialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="1ボタン（Listenerなし）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="3ボタン（Listenerあり）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（タップ）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（単一選択）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_list_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="リスト（複数選択）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="カスタムダイアログ（NumberPicker）"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dialog_custom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="カスタムダイアログ（EditText）"
            android:onClick="onClick"/>

    </LinearLayout>

</ScrollView>